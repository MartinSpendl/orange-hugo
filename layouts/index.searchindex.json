[{{ range $.Site.AllPages }}{
    "uri": "{{ .Permalink }}",
	"title": "{{ htmlEscape .Title}}",
	"description": "{{ htmlEscape .Description}}",
	"content": {{.Plain | htmlUnescape | jsonify}},
	"image" : "{{ .Params.image}}",
	"thumbImage" : "{{ .Params.thumbImage}}",
	"shortExcerpt" : "{{ .Params.shortExcerpt}}",
	"longExcerpt" : {{ if .Params.longExcerpt}} {{.Params.longExcerpt | jsonify}} {{else}} {{.Summary | jsonify}} {{end}},
	"author" : "{{ .Params.author}}",
	"summary" : {{ .Summary | jsonify}},
	"date" : {{ (.Date.Format "Jan 2, 2006" ) | jsonify}},
	"frontPageImage" :"{{.Params.frontPageImage}}",
	"images" : "{{.Params.images}}",
	"image" : "{{.Params.image}}",
	"kind" : "{{.Params.Kind}}",
	"type" : "{{.Params.Type}}",
	"LinkTitle" : "{{.Params.LinkTitle}}",
	"icon" : "{{.Params.icon}}"
},
{{end}} {} ]
